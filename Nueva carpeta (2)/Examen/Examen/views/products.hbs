<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<header>
    <h1>Listado de Productos</h1>
</header>
<body>
    <div class="container">
        <a class="btn btn-primary" href="/products/newproduct" role="button">Nuevo producto</a>
        <a class="btn btn-danger" href="/" role="button">Cerrar Sesion</a>
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Comercio</th>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th colspan="2">Operacion</th>
                    </tr>
                </thead>
                {{#each productos}}
                <tr>
                    <td>{{this.comercio}}</td>
                    <td>{{this.producto}}</td>
                    <td>{{this.precio}}</td>
                    <td>
                        <a class="btn btn-primary" href="/products/update/{{this.id}}" role="button">Modificar</a>
                        <a class="btn btn-danger" href="/products/delete/{{this.id}}" role="button">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</body>