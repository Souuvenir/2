<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script type = "text/javascript" src="../routes/usuario.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container">
        <form action="/login/log" method="get">
          <div class="col-4 mb-3">
            <label for="usuario" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="usuario" name="usuario" required>
          </div>
          <div class="col-4 mb-3">
            <label for="contrasenia" class="form-label">Contrase√±a</label>
            <input type="password" class="form-control" id="contrasenia" name="contrasenia" required>
          </div>
          <div class="col-4 mb-3 row">
            <div class="col-6">
              <button id="buttonLogin" type="submit" class="btn btn-primary linkButton">Ingresar</button>
            </div>
            <div class="col-6">
              <a href="/usuario" class="btn btn-warning linkButton">Registrar</a>
            </div>
          </div>
        </form>
    </div>
    <script>
      var cambioUsuario = false;
      var cambioContrasenia = false;
      var bottonHabilitado = false;
      $(function(){
          $('#usuario').on('change', function(){
              if(!$(this).val() == ''  || !$(this).val() == ' '){
                  $(this).css("border", "3px solid green");
                  cambioUsuario = true;
              }else{
                  $(this).css("border", "3px solid red");
                  cambioUsuario = false;
              }

              if(cambioUsuario && cambioContrasenia) {
                $('#buttonLogin').prop('disabled', false);
              } else {
                $('#buttonLogin').prop('disabled', true);
              }
          });
      });

      $(function(){
          $('#contrasenia').on('change', function(){
              if(!$(this).val() == ''  || !$(this).val() == ' '){
                  $(this).css("border", "3px solid green");
                  cambioContrasenia = true;
              }else{
                  $(this).css("border", "3px solid red");
                  cambioContrasenia = false;
              }

              if(cambioUsuario && cambioContrasenia) {
                $('#buttonLogin').prop('disabled', false);
              } else {
                $('#buttonLogin').prop('disabled', true);
              }
          });
      });

      $(function(){
         $('#buttonLogin').prop('disabled', true);
      });
      
    </script>
  </body>
</html>